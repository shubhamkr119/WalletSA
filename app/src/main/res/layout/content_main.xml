<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sa.walletsa.MainActivity"
    tools:showIn="@layout/app_bar_main">

        <TextView
            android:id="@+id/textViewCurrentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMaterialBlueGrey900"
            android:gravity="center"
            android:text="@string/tbd"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorMaterialRed50"
            android:textStyle="bold"/>

        <TableLayout
            android:id="@+id/contents_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/textViewTitleSum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="2"
                    android:background="@color/colorMaterialGrey300"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/string_total"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewSum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorMaterialGrey300"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/tbd"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"/>

            </TableRow>

            <TableRow
                android:id="@+id/tableRowHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/textViewTitleDescription"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="2"
                    android:background="@color/colorMaterialIndigo700"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/string_description"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorMaterialRed50"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewTitleAmount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorMaterialIndigo700"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/string_amount"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorMaterialRed50"
                    android:textStyle="bold"/>

            </TableRow>

            <ListView
                android:id="@+id/listViewMainActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:drawSelectorOnTop="true"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"/>
        </TableLayout>

</LinearLayout>
